<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <corners android:bottomRightRadius="8dp"
                android:bottomLeftRadius="8dp"/>
            <gradient
                android:type="radial"
                android:gradientRadius="150"
                android:centerX="0"
                android:centerY="0"
                android:endColor="#CCFF6E02"
                android:startColor="#CCFFFF00" />
        </shape>
    </item>

    <item android:state_selected="false">
        <shape>
            <corners android:bottomRightRadius="8dp"
                android:bottomLeftRadius="8dp"/>
            <gradient
                android:type="radial"
                android:gradientRadius="150"
                android:centerX="0"
                android:centerY="0"
                android:endColor="#CCD86612"
                android:startColor="#CCDBAB11" />
        </shape>
    </item>
</selector>