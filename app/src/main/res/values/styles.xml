<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppSplash" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@mipmap/welcome1</item>
    </style>

    <style name="FullScreenActivityStyle" parent="AppTheme">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="CreationActivityStyle" parent="AppTheme">
        <item name="android:windowBackground">@color/creation_activity_background</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--对话框的样式-->
    <style name="my_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--<item name="android:backgroundDimEnabled">false</item>-->
    </style>

    <style name="AVLoadingIndicatorView">
        <item name="minWidth">24dip</item>
        <item name="maxWidth">24dip</item>
        <item name="minHeight">24dip</item>
        <item name="maxHeight">24dip</item>
        <item name="indicatorName">LineSpinFadeLoaderIndicator</item>
    </style>

    <style name="bottom_dialog_style" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>

    <style name="center_dialog_style" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <!--<item name="android:windowExitAnimation">@anim/fade_out</item>-->
    </style>

    <style name="tab_menu_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/bottom_navigation_text_selector</item>
    </style>

    <style name="tab_video_detail_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawableBottom">@mipmap/tab_indicator</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/aliyun_svideo_tab_text_color_selector</item>
    </style>


    <style name="tab_menu_bg_num">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <!--<item name="android:background">@mipmap/bg_num</item>-->
        <item name="android:layout_marginLeft">-10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="save_dialog_style" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>

    <style name="timepopwindow_anim_style">
        <!--指定显示的动画xml-->
        <item name="android:windowEnterAnimation">@anim/timepicker_anim_enter_bottom</item>
        <!--指定消失的动画xml-->
        <item name="android:windowExitAnimation">@anim/timepicker_anim_exit_bottom</item>
    </style>

    <style name="popwindow_anim_style">
        <!--指定显示的动画xml-->
        <item name="android:windowEnterAnimation">@anim/popup_anim_enter_bottom</item>
        <!--指定消失的动画xml-->
        <item name="android:windowExitAnimation">@anim/popup_anim_exit_bottom</item>
    </style>

    <style name="popwindow_single_pitch_anim_style">
        <!--指定显示的动画xml-->
        <item name="android:windowEnterAnimation">@anim/popup_single_pitch_anim_enter_bottom</item>
        <!--指定消失的动画xml-->
        <item name="android:windowExitAnimation">@anim/popup_single_pitch_anim_exit_bottom</item>
    </style>

    <style name="popwindow_timer_anim_style">
        <!--指定显示的动画xml-->
        <item name="android:windowEnterAnimation">@anim/popup_timer_anim_enter_bottom</item>
        <!--指定消失的动画xml-->
        <item name="android:windowExitAnimation">@anim/popup_timer_anim_exit_bottom</item>
    </style>

    <style name="sheet_music_item_default_style">
        <item name="itemWidth">@dimen/sheet_music_item_width_default</item>
        <item name="itemLineHeight">@dimen/sheet_music_item_line_width_default</item>
        <item name="itemDividerWidth">@dimen/sheet_music_item_divider_width_default</item>
        <item name="itemPitchHeight">@dimen/sheet_music_item_pitch_height_default</item>
        <item name="itemPitchWidth">@dimen/sheet_music_item_pitch_width_default</item>
        <item name="itemLineColor">@android:color/white</item>
        <item name="itemDividerColor">@android:color/white</item>
        <item name="itemPitchColor">@color/sheet_music_item_pitch_default_color</item>
    </style>

    <style name="ActivitySingTabStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/sing_tab_selector</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="SeekbarComputePitchCursor">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/seek_bar_compute_pitch_cursor_selector</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="SeekbarComputePitchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:progressDrawable">@drawable/seek_bar_progress_background</item>
        <item name="android:minHeight">4dp</item>
        <item name="android:maxHeight">4dp</item>
        <item name="android:thumb">@drawable/seek_bar_thumb</item>
        <item name="android:background">@null</item>
    </style>

    <style name="SeekbarWWStyle">
        <item name="android:progressDrawable">@drawable/seek_bar_white_progress_background</item>
        <item name="android:minHeight">2dp</item>
        <item name="android:maxHeight">2dp</item>
        <item name="android:thumb">@drawable/seek_bar_white_thumb</item>
        <item name="android:background">@null</item>
        <item name="android:padding">0dp</item>
        <item name="android:max">100</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="SeekbarWhiteStyle">
        <item name="android:progressDrawable">@drawable/seek_bar_white_progress_background</item>
        <item name="android:minHeight">2dp</item>
        <item name="android:maxHeight">2dp</item>
        <item name="android:thumb">@mipmap/seek_red_white_bar_thumb</item>
        <item name="android:background">@null</item>
        <item name="android:padding">0dp</item>
        <item name="android:thumbOffset">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>
    <style name="SeekbarTouchStyle">
        <item name="android:progressDrawable">@drawable/drawable_progress_bar_touch</item>
        <item name="android:minHeight">5dp</item>
        <item name="android:maxHeight">5dp</item>
        <item name="android:disabledAlpha">1.0</item>
        <item name="android:thumb">@drawable/thumb_progress_bar_touch</item>
        <item name="android:thumbOffset">0dp</item>
        <item name="android:background">@null</item>
        <item name="android:clickable">false</item>
        <item name="android:longClickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>


    <style name="Panel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">220dp</item>
        <item name="android:background">#282138</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="Theme_AudioDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--//是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--/背景是否模糊显示-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="jc_style_dialog_progress" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/jc_popup_toast_anim</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="jc_popup_toast_anim" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <!--录制模块的UI配置（专业版）-->
    <style name="AlivcRecordUIStyle" parent="Theme.AppCompat.NoActionBar">
        <!--音乐按钮图片-->
        <item name="musicImage">@mipmap/alivc_svideo_icon_magic_music</item>
        <!--闪光灯按钮图片 - 开启-->
        <item name="lightImageOpen">@mipmap/aliyun_svideo_icon_magic_light</item>
        <!--闪光灯按钮图片 - 自动-->
        <item name="lightImageAuto">@mipmap/aliyun_svideo_icon_magic_light_auto</item>
        <!--闪光灯按钮图片 - 关闭-->
        <item name="lightImageClose">@mipmap/aliyun_svideo_icon_magic_light_off</item>
        <!--闪光灯按钮图片 - 不可用/与关闭的图标相同自动加color过滤-->
        <item name="lightImageUnable">@mipmap/aliyun_svideo_icon_magic_light_off</item>
        <!--倒计时图片-->
        <item name="countdownImage">@mipmap/alivc_svideo_icon_magic</item>
        <!--切换摄像头的图片-->
        <item name="switchCameraImage">@mipmap/alivc_svideo_icon_magic_turn</item>
        <!--完成的按钮图片 - 不可用-->
        <item name="finishImageUnable">@mipmap/alivc_svideo_icon_next_not_ready</item>
        <!--完成的按钮图片 - 可用-->
        <item name="finishImageAble">@mipmap/alivc_svideo_icon_next_complete</item>
        <!--底部滤镜，美颜，美肌对应的按钮图片-->
        <item name="faceImage">@mipmap/alivc_svideo_icon_beauty_face</item>
        <!--底部动图mv对应的按钮图片-->
        <item name="magicImage">@mipmap/alivc_svideo_icon_gif_effect</item>
        <!--拍摄按钮图片 - 未开始拍摄-->
        <item name="videoShootImageNormal">@mipmap/alivc_svideo_bg_record_storp</item>
        <!--拍摄按钮图片 - 拍摄中-->
        <item name="videoShootImageShooting">@mipmap/alivc_svideo_bg_record_pause</item>
        <!--拍摄按钮图片 - 长按中-->
        <item name="videoShootImageLongPressing">@mipmap/alivc_svideo_bg_record_start</item>
        <!--回删对应的图片-->
        <item name="deleteImage">@mipmap/alivc_svideo_icon_delete</item>
        <!--拍摄中红点对应的图片-->
        <item name="dotImage">@mipmap/alivc_svideo_record_time_tip</item>
        <!--向上的三角形对应的图片-->
        <item name="triangleImage">@mipmap/alivc_svideo_icon_selected_indicator</item>

    </style>

    <style name="activity_coveredite" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="bottom_dialog_animation">
        <item name="android:windowEnterAnimation">@anim/aliyun_video_anim_trans_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/aliyun_video_anim_layout_bottom_out</item>
    </style>

    <style name="alivc_svideo_effect_tab">
        <item name="android:paddingLeft">@dimen/bottom_editor_tab_padding</item>
        <item name="android:paddingRight">@dimen/bottom_editor_tab_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">11sp</item>
        <item name="android:drawablePadding">@dimen/alivc_svideo_tab_tv_iv_distance</item>
    </style>

    <style name="alivc_svideo_effect_tab_right">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomDialogStyle" parent="android:style/Theme.Dialog">
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--编辑模块的主题UI配置-->
    <style name="AlivcEditUIStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!--滤镜item对应的图片-->
        <item name="filterImage">@mipmap/aliyun_svideo_filter</item>
        <!--音乐图标-->
        <item name="musicImage">@mipmap/aliyun_svideo_music</item>
        <!--动图图标-->
        <item name="pasterImage">@mipmap/aliyun_svideo_overlay</item>
        <!--字幕图标-->
        <item name="captionImage">@mipmap/aliyun_svideo_caption</item>
        <!--MV图标-->
        <item name="mvImage">@mipmap/aliyun_svideo_mv</item>
        <!--特效图标-->
        <item name="effectImage">@mipmap/alivc_svideo_effect</item>
        <!--时间特效图标-->
        <item name="timeImage">@mipmap/aliyun_svideo_time</item>
        <!--转场图标-->
        <item name="translationImage">@mipmap/aliyun_svideo_transition</item>
        <!--涂鸦图标-->
        <item name="paintImage">@mipmap/aliyun_svideo_paint</item>
        <!--播放对应图标-->
        <item name="playImage">@mipmap/aliyun_svideo_play</item>
        <!--暂停对应图标-->
        <item name="pauseImage">@mipmap/aliyun_svideo_pause</item>
        <!--编辑完成对应图标-->
        <item name="finishImage">@mipmap/complete_white</item>
    </style>

    <style name="TextDlgStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="ResourcePreviewStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="QUDemoFullStyle" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="item_tag_list_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/tag_bg_select_tv_bg</item>
        <item name="android:minWidth">30dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@drawable/musical_select_font_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <color name="creation_activity_background">#dd282138</color>
</resources>
